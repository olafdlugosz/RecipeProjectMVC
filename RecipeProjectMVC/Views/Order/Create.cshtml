@model OrderViewModel
@{
    ViewData["Title"] = "Create";
}
<input type="hidden" value='@ViewContext.RouteData.Values["id"]' id="routeDataId" />
<h1>Create</h1>
<form asp-action="Create" method="post" class="form-horizontal" role="form">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="CustomerName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CustomerName" class="form-control" />
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CustomerEmail" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CustomerEmail" class="form-control" />
            <span asp-validation-for="CustomerEmail" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Order" />
        </div>
    </div>

</form>