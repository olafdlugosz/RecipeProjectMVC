@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
@inject SignInManager<IdentityUser> SignInManager
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Font Awesome -->
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">*@
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.16/css/mdb.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="~/css/mdb.min.css" rel="stylesheet">


</head>
<body class="grey lighten-3">
    <!--Navbar-->
    <nav class="navbar fixed-top navbar-expand-lg navbar-light blue-gradient scrolling-navbar">

        <!-- Navbar brand -->
        <a class="navbar-brand active" href="/Home/Index"><i class="fas fa-utensils fa-2x"> Home</i></a>

        <!-- Collapse button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav"
                aria-controls="basicExampleNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible content -->
        <div class="collapse navbar-collapse" id="basicExampleNav">

            <!-- Links -->
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="/Statistics/Index"><i class="fas fa-chart-line white-text fa-2x"> Stats</i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Diet/Index"><i class="fas fa-jedi white-text fa-2x"> Diets</i></a>
                </li>

                @if (SignInManager.IsSignedIn(User))
                {
                    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm" method="post" class="navbar-right">
                          
                        <li class="nav-item">
                            <a class ="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
                        </li>
                    </form>
                }
                else
                {
                    <il class="nav-item">
                        <!-- <li><a id="registerLink" asp-controller="Account" asp-action="Register">Register</a></li> -->
                        <li><a id="loginLink" class="nav-link" asp-controller="Account" asp-action="Login">Log in</a></li>
                    </il>
                }
            </ul>
            <!-- Links -->

            <form class="form-inline">
                <div class="md-form my-0">
                    <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                </div>
            </form>
            <div>
                <input type="text" class="typeahead" data-provide="typeahead">
            </div>
        </div>
        <!-- Collapsible content -->

    </nav>
    <!--/.Navbar-->
    <div>
        @RenderBody()
    </div>
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.5.16/js/mdb.min.js"></script>
    <!-- My Scripts -->
    <script type="text/javascript" src="~/scripts/Animations.js"></script>
    <script type="text/javascript" src="~/scripts/TopProtein.js"></script>
    <script type="text/javascript" src="~/scripts/TopCarbsChart.js"></script>
    <script type="text/javascript" src="~/scripts/TopFatChart.js"></script>
    <script type="text/javascript" src="~/scripts/TopCaloriesChart.js"></script>
    <script type="text/javascript" src="~/scripts/TopVitaminCChart.js"></script>
    <script type="text/javascript" src="~/scripts/TopCholesterolChart.js"></script>
    <script type="text/javascript" src="~/scripts/LowCholesterolChart.js"></script>
    <script type="text/javascript" src="~/scripts/LowSodiumChart.js"></script>
    <script type="text/javascript" src="~/scripts/DetailsPieChart.js"></script>
    <script type="text/javascript" src="~/scripts/LCHFLineChart.js"></script>
    <script type="text/javascript" src="~/scripts/HighProteinLowCarbChart.js"></script>
</body>
</html>
