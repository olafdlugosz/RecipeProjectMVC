@model DietViewModel
@{
    ViewData["Title"] = "Index";
}

<h1>Diets</h1>
<div style="margin-top: 50px; margin-left: 30px">
    <div class="row">
        <div class="col-sm-8" style="max-width: 1100px;">
            <div class="card">
                <div class="card-body">
                    <canvas id="LCHFlineChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <div class="card">
                <div class="card-body">

                    <h3>Low Carb High Fat Recipes</h3>
                    @foreach (var item in Model.LCHFRecipes)
                    {
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                            <div>@item.Label</div>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row" style="margin-top: 30px; margin-left: 15px">
    <div class="col-sm-8" style="max-width: 1100px;">
        <div class="card">
            <div class="card-body">

                <canvas id="HPLClineChart"></canvas>
            </div>
        </div>
    </div>
    <div class="col-sm-4">

        <div class="card">
            <div class="card-body">

                <h3>High Protein Low Carb Recipes</h3>
                @foreach (var item in Model.HighProteinLowCarbRecipes)
                {
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                        <div>@item.Label</div>
                    </a>
                }
            </div>
        </div>

    </div>
</div>
<partial name="_Footer" />
<script type="text/javascript" src="~/scripts/LCHFLineChart.js"></script>
<script type="text/javascript" src="~/scripts/HighProteinLowCarbChart.js"></script>